<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PITS_MAUI.Pages.ApiSetup"
             xmlns:model="clr-namespace:PITS_MAUI.Model"
             Title="ApiSetup">

    <VerticalStackLayout BackgroundColor="{StaticResource Secondary}" Padding="5" Margin="2">
        <Label Text="Set Api Url"/>


        <VerticalStackLayout Padding="2">
            <Entry x:Name="ApiUrlEntry" Placeholder="Enter Api Url Here"/>
            <Button x:Name="SetApiUrl" Text="Set Url" Clicked="SetApiUrlButtonClicked"/>
        </VerticalStackLayout>

    </VerticalStackLayout>
</ContentPage>